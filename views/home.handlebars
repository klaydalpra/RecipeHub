
{{#*inline "title"}}Recipe Hub{{/inline}}

{{!-- Main content for the home page --}}
<nav>
  {{#if user}}
    <a href="/profile">Profile</a>
    <a href="/signout">Sign Out</a>
    <a href="/create-recipe">Create Recipe</a>
  {{else}}
    <a href="/login">Login</a>
    <a href="/signupuser">Sign Up</a>
  {{/if}}
</nav>

<section id="search-section">
  <h2>Search for Recipes</h2>
  <form action="/searchrecipe" method="POST">
    <input type="text" name="searchQuery" placeholder="Search recipes..." required>
    <select name="filter" id="filter">
        <option value="all">All</option>
        <option value="dietary">Dietary Restrictions</option>
        <option value="cuisine">Cuisine</option>
        <option value="ingredients">Ingredients</option>
    </select>

    <button type="submit">Search</button>
  </form>
</section>

         <section id="trending-section">
            <h2>Trending / Recently Posted Recipes</h2>
            <ul>
                {{#each trendingRecipes}}
                    <li>
                        <h3>
                          <a href="/recipes/{{this.id}}">{{this.name}}</a>
                        </h3>
                        <p><strong>Cuisine:</strong> {{this.cuisine}}</p>
                        <p><strong>Posted on:</strong> {{this.postedDate}}</p>
                    </li>
                {{/each}}
            </ul>
        </section>

        <script>
        // Clear button functionality
        document.getElementById('clear-button').addEventListener('click', () => {
            document.getElementById('search-input').value = '';
            document.getElementById('results-list').innerHTML = '';
        });
    </script>

