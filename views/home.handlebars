<div class="trending-container">
  <h2>Trending / Recently Posted Recipes</h2>
  <ul>
    {{#each topRatedRecipes}}
      <li>
        <h3>
          <a href="/recipe/{{this._id}}">{{this.name}}</a>
        </h3>
        <p><strong>Cuisine:</strong> {{this.cuisine}}</p>
        <p><strong>Posted on:</strong> {{this.postedDate}}</p>
        <p><strong>Average Rating:</strong> {{this.averageRating}}</p>
      </li>
    {{/each}}
  </ul>
</div>

