{{!-- Sign Up Page --}}
<h1>Sign Up</h1>
<form id="signup-form" method="POST" action="/signupuser">
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" required>
    <br>
    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" required>
    <br>
    <label for="userId">User ID:</label>
    <input type="text" id="userId" name="userId" required>
    <br>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>
    <br>
    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" id="confirmPassword" name="confirmPassword" required>
    <br>
    <label for="favoriteQuote">Favorite Quote:</label>
    <textarea id="favoriteQuote" name="favoriteQuote" required></textarea>
    <br>
    <label for="backgroundColor">Background Color:</label>
<input type="color" id="backgroundColor" name="backgroundColor" value="#ffffff" required>
<br>
<label for="fontColor">Font Color:</label>
<input type="color" id="fontColor" name="fontColor" value="#000000" required>

    <br>
    <label for="role">Role:</label>
    <select id="role" name="role" required>
        <option value="admin">Admin</option>
        <option value="user">User</option>
    </select>
    <br>
    <button type="submit" id="submitButton" name="submitButton">Sign Up</button>
</form>
<a href="/signinuser">Already have an account? Click here to sign in!</a>

{{#if error}}
<p class="error">{{error}}</p>
{{/if}}
